#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACKS_DIR=$(dirname $(dirname $0))

function indent() {
  sed -u 's/^/       /'
}

error() {
  echo " !     $*" >&2
  exit 1
}

cd $BUILD_DIR

echo "-----> prepare environment ..."
apt-get update
apt-get --assume-yes install expect tar wget unzip default-jdk vim language-pack-en binutils

echo "-----> compiling with make ..."
make | indent
